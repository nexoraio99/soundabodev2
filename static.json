{
  "root": ".",
  "encoding": "UTF-8",
  "clean_urls": true,
  "https_only": true,
  "canonical_host": "soundabode.com",

  "logging": {
    "access": true,
    "error": "error"
  },

  "redirects": {
    "/index.html": {
      "url": "/",
      "status": 301
    },

    "/home": {
      "url": "/",
      "status": 301
    },
    "/home/": {
      "url": "/",
      "status": 301
    },

    "/about-us": {
      "url": "/about.html",
      "status": 301
    },

    "/contact-us": {
      "url": "/contact.html",
      "status": 301
    },

    "/privacy-policy": {
      "url": "/privacy.html",
      "status": 301
    },
    "/privacy-and-policy": {
      "url": "/privacy.html",
      "status": 301
    },
    "/policy": {
      "url": "/privacy.html",
      "status": 301
    },

    "/sitemap": {
      "url": "/sitemap.xml",
      "status": 301
    },
    "/robots": {
      "url": "/robots.txt",
      "status": 301
    },

    /* ---- SHORT ALIASES FOR COURSES ---- */

    "/dj": {
      "url": "/courses/dj-training",
      "status": 301
    },

    "/music-production": {
      "url": "/courses/music-production",
      "status": 301
    },

    "/music-production/beginner-course": {
      "url": "/courses/music-production/beginner-course.html",
      "status": 301
    },
    "/music-production/intermediate-course": {
      "url": "/courses/music-production/intermediate-course.html",
      "status": 301
    },
    "/music-production/mixing-mastering-course": {
      "url": "/courses/music-production/mixing-mastering-course.html",
      "status": 301
    },
    "/music-production/audio-engineering-diploma": {
      "url": "/courses/music-production/audio-engineering-diploma.html",
      "status": 301
    },

    "/audio-engineering-diploma": {
      "url": "/courses/music-production/audio-engineering-diploma.html",
      "status": 301
    }
  },

  "headers": {
    "/**": {
      "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "Referrer-Policy": "strict-origin-when-cross-origin",
      "Permissions-Policy": "geolocation=(), microphone=(), camera=(), payment=(), usb=()",
      "X-XSS-Protection": "1; mode=block",
      "Cache-Control": "no-store, no-cache, must-revalidate"
    },

    "/Assets/**": {
      "Cache-Control": "public, max-age=31536000, immutable"
    },
    "/script/**": {
      "Cache-Control": "public, max-age=604800"
    },
    "/style/**": {
      "Cache-Control": "public, max-age=604800"
    }
  }
}
